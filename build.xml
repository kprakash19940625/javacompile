<?xml version="1.0" encoding="UTF-8"?>
<project default="run" name="running java class using ant">
  <target name="run" depends="compile">
    <java classname="Java" classpath="staging">
    </java>
  </target>
  <target name="compile">
    <mkdir dir="staging" />
    <javac includeantruntime="false" srcdir="./src" destdir="staging"/>
  </target>
</project>
